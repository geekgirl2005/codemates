<% include ../partials/header %> 
<div class="container">
    <div class="row">
        <div class="col-md-3"></div>

            <div class="col-md-6">
                <div class="thumbnail">
                    <img class="responsive" src="https://images.unsplash.com/photo-1479920252409-6e3d8e8d4866?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=7335ddddbdb2e401ce4f50507524d900&auto=format&fit=crop&w=2100&q=80">
        <!--<div style="width: 80%; margin: 0 auto">-->
                </div>
            </div>
        <div class="col-md-3"></div>
    </div>
    <div class="row">
        <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="thumbnail">
                    <!--<div class="form-section">-->
                        <h1>Create Your Profile</h1>
                        <div class="form">
                           <form action="/profiles" method="POST">
                               <div>
                                    <div class="form-group">
                                    <input type="text" name="comment[name]" placeholder="name">
                                    </div>
                                    
                                    <div class="form-group">
                                    <textarea name="comment[about]" placeholder="about"></textarea>
                                    </div>
                               </div>
                                <div class="radio-inputs">
                                    <h4>I look for:</h4>
                                    <label class="radio-inline">
                                  <input type="radio"  name="comment[gender]" value="Male"> Male Roomate
                                </label>
                                <label class="radio-inline">
                                  <input type="radio" name="comment[gender]" value="Female"> Female Roomate
                                </label>
                                <label class="radio-inline">
                                  <input type="radio" name="comment[gender]" value="Male or Female"> Either
                                </label>
                                </div>
                                
                                <div>
                                <h4>Share Bathroom: </h4>
                                  <label class="radio-inline">
                                  <input type="radio"  name="comment[bathroom]" value="Yes"> Yes
                                </label>
                                <label class="radio-inline">
                                  <input type="radio" name="comment[bathroom]" value="No"> No
                                </label>
                                </div>
                                
                                <div>
                                                               <h4>Share Room: </h4>
                                  <label class="radio-inline">
                                  <input type="radio"  name="comment[room]" value="Yes"> Yes
                                </label>
                                <label class="radio-inline">
                                  <input type="radio" name="comment[room]" value="No"> No
                                </label>
                                </div>
                                
                                <div>
                                <h4>Monthly budget:</h4>
                                  <label class="radio-inline">
                                  <input type="radio"  name="comment[budget]" value="Less than $1000/month"> Less than $1000
                                </label>
                                <label class="radio-inline">
                                  <input type="radio" name="comment[budget]" value="Between $1001 - $1999"> Between $1001 - $1999
                                </label>
                                 <label class="radio-inline">
                                  <input type="radio" name="comment[budget]" value="Less than $2000/month"> Less than $2000
                                </label>
                                </div>
                                
                                 <div>
                                    <h4>Commute Time(each way):</h4>
                                    <label class="radio-inline">
                                  <input type="radio"  name="comment[commute]" value="Less then 30 min"> Less then 30 min
                                </label>
                                <label class="radio-inline">
                                  <input type="radio" name="comment[commute]" value="Between 30-60 min"> Between 30-60 min
                                </label>
                                 <label class="radio-inline">
                                  <input type="radio" name="comment[commute]" value="Over 60 mine"> Over 60 min
                                </label>
                                </div>
                                                               
                                <div class="form-group">
                                        <button type="submit" class="btn btn-default" name="submit">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>  
                </div>
                <div class="col-md-3"></div>
    </div>
</div>
<% include ../partials/footer %> 
